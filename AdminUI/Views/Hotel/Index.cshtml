<div class="well bs-component">
    <div ng-controller="hotelController" ng-init="init()" ng-cloak="">
        <div class="row">
            <div class="jumbotron">
                <div class="container">
                    <h1 class="text-center">Hotels page</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-2 col-lg-offset-2 col-md-8 col-lg-8 col-sm-12 col-xs-12">
                <a data-toggle="modal" data-target="#myModal" class="btn btn-raised btn-warning">
                    Add new hotel
                    <div class="ripple-container"></div>
                </a>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Stars</th>
                            <th>Adress</th>
                            <th>Description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="hotel in hotels">
                            <td>{{hotel.Name}}</td>
                            <td>{{hotel.Stars}}</td>
                            <td>{{hotel.Adress}}</td>
                            <td>{{hotel.Description}}</td>
                            <td><a href="javascript:void(0)" ng-click="deleteHotel(hotel)"><i class="fa fa-times"></i></a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Create hotel</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="control-label">Name</label>
                            <input class="form-control" placeholder="Hotel name" ng-model="hotel.Name">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Stars</label>
                            <input class="form-control" placeholder="Hotel stars" ng-model="hotel.Stars">
                        </div>
                        <div class="form-group ">
                            <label class="control-label">Adress</label>
                            <input  class="form-control" placeholder="Hotel adress" ng-model="hotel.Adress">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Description</label>
                            <input  class="form-control" placeholder="Hotel description" ng-model="hotel.Description">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" ng-click="addHotel('@Url.Action("AddHotel","Hotel")')">Save changes</button>  
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript" src="~/js/services/hotelService.js"></script>
    <script type="text/javascript" src="~/js/controllers/hotelController.js"></script>
}

@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/Scripts/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Scripts/lib/font-awesome-css/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Content/css/angular-snap.css" />
    <link rel="stylesheet" href="~/Scripts/lib/angular-material/angular-material.min.css" />
    <link rel="stylesheet" href="~/Scripts/lib/angular-material/angular-material.layouts.min.css" />
    <link rel="stylesheet" href="~/Scripts/lib/font-awesome-css/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/css/bootstrap-material-design.min.css" />
    <link rel="stylesheet" href="~/Content/css/ripples.min.css" />
    <style>
        .loading-spiner {
            position: absolute;
            left: 50%;
            top: 50%;
            z-index: 9999999999999;
        }
    </style>

    <script src="~/Scripts/jquery-2.2.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/js/material.min.js"></script>
    <script src="~/Scripts/lib/angular/angular.js"></script>
    <script src="~/Scripts/lib/angular-aria/angular-aria.min.js"></script>
    <script src="~/Scripts/lib/angular-messages/angular-messages.min.js"></script>
    <script src="~/Scripts/lib/angular-animate/angular-animate.js"></script>
    <script src="~/Scripts/lib/angular-snapjs/src/scripts/snap.js"></script>
    <script src="~/Scripts/lib/angular-local-storage/dist/angular-local-storage.min.js"></script>
    <script src="~/Scripts/lib/angular-loading-bar/src/loading-bar.js"></script>
    <script src="~/Scripts/js/app.js"></script>
    <script src="~/Scripts/js/services/authInterceptorService.js"></script>
    <script src="~/Scripts/js/services/authService.js"></script>
    <script src="~/Scripts/js/controllers/signInController.js"></script>
    <script src="~/Scripts/js/controllers/layoutController.js"></script>
</head>
<body ng-app="yapp">
<div class="row">
    <div class="col-md-offset-3 col-lg-offset-3 col-md-6 col-lg-6 col-sm-12 col-xs-12" ng-controller="signInController">
        <div class="well bs-component">
            <form class="form-horizontal">
                <fieldset>
                    <legend class="center-block text-center">Login</legend>
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Email</label>
                        <div class="col-md-10">
                            <input type="email" class="form-control" id="inputEmail" placeholder="Email" ng-model="loginData.userName">
                        </div>
                        <span class="material-input"></span>
                    </div>
                    <div class="form-group is-empty">
                        <label for="inputPassword" class="col-md-2 control-label">Password</label>

                        <div class="col-md-10">
                            <input type="password" class="form-control" id="inputPassword" placeholder="Password" ng-model="loginData.password">
                        </div>
                        <span class="material-input"></span>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-raised btn-warning" ng-click="login()">Login</button>
                        </div>
                    </div>
                </fieldset>
            </form>
            <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div>
        </div>
    </div>
</div>
    <div class="loading-spiner" data-loading><div><img class="img-responsive" style="height: 10%;width: 10%" src="~/images/loadingGif.gif" /></div></div>
    <div class="modal fade" id="errorAlert" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Error</h4>
                </div>
                <div class="modal-body">
                    <p>
                        Authorization error, please try again
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>

</body>